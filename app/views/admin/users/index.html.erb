<div class="d-flex justify-content-between align-items-center mb-3 mt-3">
  <h3>
    <i class="bi bi-people-fill me-2"></i>
    Manage Users
  </h3>
  <%= link_to new_admin_user_path, class: "btn btn-success" do %>
    <i class="bi bi-plus-circle me-1"></i>
    New User
  <% end %>
</div>

<%= render 'shared/search', path: admin_users_path, placeholder: "Search users..." %>

<table class="table table-striped table-hover">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Display Name</th>
      <th>Email</th>
      <th>Created</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.display_name %></td>
        <td><%= user.email %></td>
        <td><%= user.created_at.strftime("%d %b %Y") %></td>
        <td>
          <%= link_to "Edit", edit_admin_user_path(user), class: "btn btn-sm btn-outline-warning" %>
          <%= link_to "Delete", admin_user_path(user), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-outline-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="mt-3">
  <%= paginate @users, theme: 'bootstrap-5',
    pagination_class: "pagination-sm flex-wrap justify-content-center",
    nav_class: "d-inline-block" %>
</div>