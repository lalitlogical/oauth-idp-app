<%= form_tag(path, method: :get, class: 'd-flex mb-4') do %>
  <div class="input-group">
    <span class="input-group-text">
      <i class="bi bi-search"></i>
    </span>
    <%= text_field_tag(:search, params[:search], placeholder: placeholder, class: "form-control me-2") %>
    <%= submit_tag('Search', class: "btn btn-outline-success") %>
    <%= link_to 'Clear', path, class: "btn btn-outline-danger ms-2"%>
  </div>
<% end %>